<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/grey"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:textAlignment="viewStart"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/log_modify_cat"
            android:layout_width="@dimen/buttons_1"
            android:layout_height="@dimen/buttons_1"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_mode_24"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/log_delet_cat"
            android:layout_width="@dimen/buttons_1"
            android:layout_height="@dimen/buttons_1"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <Switch
            android:id="@+id/set_cat_global"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fav_global"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>