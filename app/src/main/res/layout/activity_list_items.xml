<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Listen.list_items">

  <LinearLayout
      android:layout_width="409dp"
      android:layout_height="729dp"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <AutoCompleteTextView
          android:id="@+id/autoCompleteTextView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:completionThreshold="1"
          android:text="@string/empty" />

        <ImageButton
            android:id="@+id/show_spec_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_apps_24" />

      <ImageButton
          android:id="@+id/add_item"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="0"
          app:srcCompat="@drawable/baseline_add_box_24" />

        <ImageButton
            android:id="@+id/textinput_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_baseline_cancel_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_spec_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

      <EditText
          android:id="@+id/editTextNumberDecimal6"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="numberDecimal" />

      <Spinner
          android:id="@+id/spinner5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:entries="@array/einheiten_array" />

        <ImageButton
            android:id="@+id/set_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/palette_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/items_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_baseline_filter_alt_24" />

        <ImageButton
            android:id="@+id/items_show_checkboxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/event_list_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/items_select_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/check_box_outline_blank_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/items_select_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/check_box_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/items_selected_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/electric_bolt_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_items_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" />
      </LinearLayout>
    </ScrollView>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>