<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal.Personalfragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/yellow"
                android:padding="5dp"
                android:text="@string/date_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/imageButton70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#FCF5FD"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="@string/date_sample" />

                <ImageButton
                    android:id="@+id/imageButton76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FCF5FD"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/personal_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/yellow"
                android:padding="5dp"
                android:text="@string/personal_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/personalstamm_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="0dp">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/personal_new_entry"
                        android:layout_width="@dimen/buttons_2"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/purple_200"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_save_24" />

                    <ImageButton
                        android:id="@+id/personal_open_log"
                        android:layout_width="@dimen/buttons_2"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0"
                        android:background="@color/purple_200"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_list_alt_24" />

                    <ImageButton
                        android:id="@+id/personal_add_employ"
                        android:layout_width="@dimen/buttons_2"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/purple_200"
                        android:padding="5dp"
                        android:src="@drawable/baseline_group_add_24" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>